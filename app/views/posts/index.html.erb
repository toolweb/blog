<h1>Listing posts</h1>
<% if !flash[:notice].blank? %>
	<div>
		<%= flash[:notice] %>
	</div>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', {:action => 'show', :id => post.id } %></td>
<!--    <td><%= link_to 'Edit', edit_post_path(post) %></td> -->  
    <td><%= link_to 'Edit', {:action => 'edit', :id => post.id} %></td>
    <td><%= link_to 'Destroy', {:action => 'destroy', :id => post.id}, :confirm => "Are you sure?", :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
